<h1>SIGN UP</h1>
<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    <div class="error_messages">
      <h2>Form is invalid</h2>
      <ul>
        <% for message in @user.errors.full_messages %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'type-input'%>
  </div>
  <div class="field">
    <%= f.label :email %>
    <%= f.text_field :email, class: 'type-input'%>
  </div>
  <div class="field">
    <%= f.label :password %>
    <%= f.password_field :password, class: 'type-input' %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, class: 'type-input' %>
  </div>
  <div class='actions'><%= f.submit 'SIGN UP', :class => "create" %></div>
<% end %>